<% include partials/header %>

<div class="container-fluid">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to YelpCamp!</h1>
      <p>View our handpicked campgrounds from all over the world</p>
      <p>
        <a class="btn btn-lg btn-dark" href="/campgrounds/new">Add New Campground</a>
      </p>
    </div>
  </header>

  <div class="row">
    <div class="col-lg-12">
      <h3>Our Most Popular Campgrounds!</h3>
    </div>
  </div>
  <div class="row">
    <% campgrounds.forEach( campground => { %>
      <div class="col-md-3 col-sm-6 ">
        <figure class="img-thumbnail figure">
          <img class="mx-auto d-block img-fluid figure-img" src="<%= campground.image %>" >
          <figcaption class="figure-caption text-center">
            <h4><%= campground.name %></h4>
          </figcaption>
        </figure>
      </div>
    <% }) %>
  </div>

</div>

<% include partials/footer %>
